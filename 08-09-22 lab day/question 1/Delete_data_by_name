	public void arraylist() {
		
	}
	public void aceept_and_stored() {
		System.out.print("Enter the number of data:");
		size=sc.nextInt();
		for(k=0;k<size;k++) {

			System.out.print("\tEnter the Details:");
			System.out.print("\nEnter your name:");
			name=sc.next();		
			System.out.print("Enter your E-mail:");
			email=sc.next();		
			System.out.print("Enter your Phone no:");
			ph=sc.next();		
			System.out.print("Enter your Percentage :");
			per=sc.nextDouble();	
		
		ArrayList<String> al=new ArrayList<>(size);	//ArrayList1...................
		ArrayList<Double> al1=new ArrayList<>(size);//ArrayList2...................
		al.add(name);
		al.add(ph);
		al.add(email);
		al1.add(per);
		System.out.println("\tDetails of "+name);
      for (i=0; i<al.size(); i++) {
      String curr = al.get(i);
      System.out.println(curr);

      }
      for(j=0;j<al1.size();j++) {
		Double d=al1.get(j);
		System.out.println(d);
	}
      
	

		}
		
	}

	public void delete_data_by_name() {
		
		System.out.println("\tDelete for the data by name:");
		System.out.println("Enter the name:");
	      name=sc.next();
	      System.out.println(al.contains(al));

	if(n1==name) {
		al.clear();
		System.out.println("Your data is deleted. ");
	}
	else {
		System.out.println("Does'nt find tha data! please try again");
	}		
	}
	
}
